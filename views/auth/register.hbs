<div class="row justify-content-center mt-4">
  <div class="col-sm-4">
    <h1>Register</h1>

    {{!--        FORM         --}}
    <form method="POST" action="/register">
        <div class="form-group">
            <label for="formGroupExampleInput">Name</label>
            <input
            value="{{user.name}}"
            name="name"
{{!-- if  REQUIRED in the SCHEMA and there is an ERROR => red border field class--}}
            class="form-control {{#if errors.name}}is-invalid{{/if}}" 
            >
{{!-- display the ERROR MESSAGE defined in the schema : required: [true, 'Name is required']--}}
            {{#if errors.name}}
            <div class="invalid-feedback">{{errors.name}}</div>
            {{/if}}
        </div>

        <div class="form-group">
            <label for="formGroupExampleInput2">Email</label>
            <input 
{{!-- in this case the error is also thrown by the html tag using type = email --}}
            {{!-- type="email"  --}}
{{!-- but is better use the check done in the back end: match: [EMAIL_PATTERN, 'wrong mail formatting'],            --}}
            value="{{user.email}}"
            name="email"
            class="form-control {{#if errors.email}}is-invalid{{/if}}" 
            >
            {{#if errors.email}}
            <div class="invalid-feedback">{{errors.email}}</div>
            {{/if}}
        </div>

        <div class="form-group">
            <label for="formGroupExampleInput2">Password</label>
            <input 
            type="password" 
            name="password" 
            class="form-control {{#if errors.password}}is-invalid{{/if}}" 
            
            {{#if errors.password}}
            <div class="invalid-feedback">{{errors.password}}</div>
            {{/if}}
            >
        </div>

        <button type="submit" class="btn btn-primary">Register</button>
    </form>

  </div>
</div>




